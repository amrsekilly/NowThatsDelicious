//- extend the basic layout for the nav and the rest of the page
extends layout

//- import the mixin for the storeCard
include /mixins/_storeCard

block content
  .inner
    h2= tag || "tags"
    ul.tags 
      each t in tags 
        li.tag
          a.tag__link(href=`/tags/${t._id}`, class=(t._id === tag ? "tag__link--active" : ""))
            span.tag__text= t._id
            span.tag__count= t.count
    .stores 
      each store in stores 
        +storeCard(store)
